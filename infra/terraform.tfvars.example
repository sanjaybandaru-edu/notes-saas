# COPY THIS FILE TO terraform.tfvars AND FILL IN YOUR VALUES
# DO NOT COMMIT terraform.tfvars TO VERSION CONTROL

# AWS Region
aws_region = "us-east-1"

# Environment
environment = "production"

# Domain Configuration - CHANGE THESE
domain_name      = "note.collegehive.in"
hosted_zone_name = "collegehive.in"

# Database Credentials - USE STRONG PASSWORDS
db_username = "postgres"
db_password = "CHANGE_ME_TO_STRONG_PASSWORD"

# JWT Secret - GENERATE A STRONG RANDOM STRING
jwt_secret = "CHANGE_ME_TO_RANDOM_STRING_AT_LEAST_32_CHARS"

# ECS Configuration (optional - defaults work for small scale)
# ecs_cpu           = "256"
# ecs_memory        = "512"
# ecs_desired_count = 1
# db_instance_class = "db.t3.micro"
